{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",

    "esModuleInterop": true,
    "typeRoots": ["./src/types", "./node_modules/@types"],

    // Optional but helpful:
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}

